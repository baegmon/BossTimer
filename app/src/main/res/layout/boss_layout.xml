<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:id="@+id/boss_icon"
        android:src="@drawable/boss_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/boss_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:text="Boss Name"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/boss_level"
        android:layout_toRightOf="@+id/boss_icon"
        android:layout_toEndOf="@+id/boss_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time"
        android:id="@+id/boss_time"
        android:textColor="#FF9900"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/boss_appearance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Boss Time"
        android:id="@+id/boss_appearance"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/boss_name"
        android:layout_toRightOf="@+id/boss_icon"
        android:layout_toEndOf="@+id/boss_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Level"
        android:textColor="#000000"
        android:id="@+id/boss_level"
        android:layout_alignTop="@+id/boss_icon"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lvl."
        android:textColor="#C60000"
        android:id="@+id/textView6"
        android:layout_above="@+id/boss_name"
        android:layout_toRightOf="@+id/boss_icon"
        android:layout_toEndOf="@+id/boss_icon" />


</RelativeLayout>